= form_for [@group, @message] do |f|
  = f.text_field :content, class: 'new_message__input-box__text', placeholder: 'type a message'
  .new_message__input-box
    = f.label :image, class: 'new_message__input-box__image-label' do
      = fa_icon 'picture-o'
      = f.file_field :image, class: 'new_message__input-box__image-label__input'
  = f.submit 'Send', class: 'new_message__submit-btn'
