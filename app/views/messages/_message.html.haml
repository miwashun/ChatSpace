.message{"data-message_id": message.id}
  .message__upper-info
    %p.message__upper-info__user
      = message.user.name
    %p.message__upper-info__date
      = message.created_at.strftime("%Y/%m/%d %H:%M")
  %p.message__text
    - if message.content.present?
      %p.lower-message__content
        = message.content
    = image_tag message.image.url, class: 'form__mask__image' if message.image.present?
%li
  = link_to message_path, method: :delete,data: {confirm: '削除しますか？'} do
    %button.delete--message
      削除する